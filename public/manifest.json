{
  "manifest_version": 3,
  "name": "AgentShell",
  "description": "A Headless OS for agents â€” browse the web using standard Linux commands via a terminal in the Chrome Side Panel.",
  "version": "1.0.0",
  "permissions": [
    "sidePanel",
    "debugger",
    "activeTab",
    "cookies",
    "identity",
    "storage",
    "alarms"
  ],
  "minimum_chrome_version": "116",
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "AgentShell"
  },
  "homepage_url": "https://github.com/apireno/AgenticShell",
  "icons": {}
}
